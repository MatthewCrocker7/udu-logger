{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018    
    },
    "plugins": [
        "react",
        "mocha"
    ],
    "rules": {
        "no-console": "off",
        "comma-dangle": "off",
        "func-names": ["error", "as-needed"]
    }
}